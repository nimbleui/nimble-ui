{
  "compilerOptions": {
    "lib": ["DOM", "ES2020"],
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@nimble-ui/utils": ["../utils/src/index.ts"],
      "@nimble-ui/utils/*": ["../utils/src/*"],
      "@nimble-ui/lint-config": ["../lint-config"],
      "@nimble-ui/move": ["../move/src/index.ts"]
    }
  }
}